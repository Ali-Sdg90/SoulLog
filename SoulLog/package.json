{
    "name": "soul-log",
    "version": "0.0.1",
    "description": "Cross-platform daily log & calendar app that tracks your soul well-being.",
    "author": "Ali Sadeghi",
    "private": true,
    "type": "module",
    "main": "electron/main.js",
    "scripts": {
        "dev": "vite",
        "prepare": "husky install",
        "electron": "wait-on http://localhost:5173 && electron electron/main.js",
        "start": "concurrently \"npm run dev\" \"npm run electron\"",
        "build": "vite build",
        "lint": "eslint .",
        "preview": "vite preview",
        "dist": "npm run build && electron-builder"
    },
    "build": {
        "appId": "com.soullog.app",
        "productName": "SoulLog",
        "files": [
            "dist/**/*",
            "electron/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "build"
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "build/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true
        }
    },
    "dependencies": {
        "@ant-design/icons": "^6.0.1",
        "antd": "^5.27.3",
        "axios": "^1.11.0",
        "crypto-js": "^4.2.0",
        "dayjs": "^1.11.18",
        "jalali-moment": "^3.3.11",
        "moment": "^2.30.1",
        "moment-jalaali": "^0.10.4",
        "moment-timezone": "^0.6.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-router-dom": "^6.26.0",
        "react-toastify": "^11.0.5",
        "sass": "^1.92.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.33.0",
        "@types/react": "^19.1.10",
        "@types/react-dom": "^19.1.7",
        "@vitejs/plugin-react": "^5.0.0",
        "concurrently": "^9.2.1",
        "electron": "^38.0.0",
        "electron-builder": "^26.0.12",
        "eslint": "^9.33.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "globals": "^16.3.0",
        "husky": "^8.0.3",
        "vite": "^7.1.2",
        "wait-on": "^8.0.4"
    }
}
